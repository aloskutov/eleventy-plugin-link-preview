{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["*.config.js"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-duplicate-imports": ["error"],
    "no-self-compare": ["error"],
    "no-use-before-define": ["error"],
    "camelcase": ["error"],
    "max-len": ["error", {
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true
      }],
    "strict": "warn"
  }
}
